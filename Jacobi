import numpy as np

def jacobi(A, b):
    
    n = len(b)
    k = 50
    
    d = np.diag(A)
    D = np.zeros((n,n))
    for i in range(n):
        D[i][i] = d[i]
    Dinv = np.linalg.inv(D)
    print("D = ", D)
    print("d = ", d)
    
    r = A - D
    print("r = ", r)
    
    x = np.zeros((n, 1))
    
    for j in range(k+1):
        x = np.dot(Dinv, (b - np.dot(r, x)))
    
    return x
